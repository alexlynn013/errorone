<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Personal_Information">


    <TextView

        android:id="@+id/txt_subject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginHorizontal="20dp"
        android:text="Please select subject that you want to learn"

        />

    <CheckBox
        android:id="@+id/checkb1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:text="Lorem"
        android:textColor="@color/cardview_dark_background"

        />

    <CheckBox
        android:id="@+id/checkb2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:text="Lorem"
        android:textColor="@color/cardview_dark_background"

        />

    <CheckBox
        android:id="@+id/checkb3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:text="Lorem"
        android:textColor="@color/cardview_dark_background"

        />

    <CheckBox
        android:id="@+id/checkb4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:text="Lorem"
        android:textColor="@color/cardview_dark_background"

        />

    <CheckBox
        android:id="@+id/checkb5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:text="Lorem"
        android:textColor="@color/cardview_dark_background"

        />

    <TextView

        android:id="@+id/txt_char"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginHorizontal="20dp"
        android:text="Choose one of your favrouite Person in Wizard World"

        />

    <Spinner

        android:id="@+id/spinChar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cardview_dark_background"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="20dp"

        />


</LinearLayout>